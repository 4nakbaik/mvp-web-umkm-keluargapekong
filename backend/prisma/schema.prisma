generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  STAFF
}

enum OrderStatus {
  PENDING
  PAID
  CANCELLED
  FAILED
}

enum Category {
  MAKANAN
  MINUMAN
  SNACK
  JASA
  LAINNYA
}


model User {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  password  String
  role      Role      @default(STAFF)
  address   String?   
  createdAt DateTime  @default(now())
  products  Product[]
  orders    Order[]
  createdCustomers Customer[] @relation("CustomerRegistrar")
}

model Customer {
  id        String   @id @default(uuid())
  name      String
  phone     String?  @unique
  email     String?  @unique
  address   String?  
  isMember  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
  registeredBy   User?   @relation("CustomerRegistrar", fields: [registeredById], references: [id])
  registeredById String?
  orders    Order[]
}

model Product {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?  @db.Text
  price       Decimal  @db.Decimal(10, 2)
  stock       Int
  category    Category @default(LAINNYA)
  imageUrl    String?  // Sesuai request ye
  imagePath   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  orderItems  OrderItem[]
}

model Order {
  id          String      @id @default(uuid())
  code        String      @unique 
  totalAmount Decimal     @db.Decimal(10, 2)
  paymentType String      @default("CASH") // CASH, QRIS, PAYLATER(JANCOQ)
  createdAt   DateTime    @default(now())
  userId      String
  user        User        @relation(fields: [userId], references: [id])
  customerId  String?
  customer    Customer?   @relation(fields: [customerId], references: [id])
  items       OrderItem[]
}

model OrderItem {
  id        String   @id @default(uuid())
  quantity  Int
  price     Decimal  @db.Decimal(10, 2) 
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id])
  productId String
  product   Product  @relation(fields: [productId], references: [id])
}