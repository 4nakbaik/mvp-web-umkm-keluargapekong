generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum Role {
  ADMIN
  STAFF
}

enum OrderStatus {
  PENDING
  PAID
  CANCELLED
  FAILED
}

enum Category {
  MAKANAN
  MINUMAN
  SNACK
  JASA
  LAINNYA
}

enum DiscountType { // NEW: Tipe Diskon
  FIXED
  PERCENT
}


model User {
  id               String     @id @default(uuid())
  name             String
  email            String     @unique
  password         String
  role             Role       @default(STAFF)
  address          String?    
  createdAt        DateTime   @default(now())
  products         Product[]
  orders           Order[]
  createdCustomers Customer[] @relation("CustomerRegistrar")
}

model Customer {
  id             String   @id @default(uuid())
  name           String
  phone          String?  @unique
  email          String?  @unique
  address        String?  
  isMember       Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt @default(now())
  registeredById String?
  registeredBy   User?    @relation("CustomerRegistrar", fields: [registeredById], references: [id])
  orders         Order[]
}

model Product {
  id          String    @id @default(uuid())
  name        String    @unique
  description String?   @db.Text
  price       Decimal   @db.Decimal(10, 2)
  stock       Int
  category    Category  @default(LAINNYA)
  imageUrl    String?   
  imagePath   String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  orderItems  OrderItem[]
}

model Voucher { 
  id          String       @id @default(uuid())
  code        String       @unique
  type        DiscountType
  value       Decimal      @db.Decimal(10, 2)
  startDate   DateTime?
  endDate     DateTime?
  minPurchase Decimal?     @db.Decimal(10, 2)
  maxDiscount Decimal?     @db.Decimal(10, 2)
  quota       Int?
  usageCount  Int          @default(0)
  isActive    Boolean      @default(true)
  orders      Order[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Order {
  id             String      @id @default(uuid())
  code           String      @unique 
  subtotal       Decimal     @default(0) @db.Decimal(10, 2)
  taxAmount      Decimal     @default(0) @db.Decimal(10, 2)
  discountAmount Decimal     @default(0) @db.Decimal(10, 2)
  totalAmount    Decimal     @db.Decimal(10, 2)
  paymentType    String      @default("CASH") 
  createdAt      DateTime    @default(now())
  status         OrderStatus @default(PENDING)
  userId         String
  user           User        @relation(fields: [userId], references: [id])
  customerId     String?
  customer       Customer?   @relation(fields: [customerId], references: [id])
  voucherId      String?     
  voucher        Voucher?    @relation(fields: [voucherId], references: [id])
  items          OrderItem[]
}

model OrderItem {
  id        String  @id @default(uuid())
  quantity  Int
  price     Decimal @db.Decimal(10, 2) 
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id])
  productId String
  product   Product @relation(fields: [productId], references: [id])
}