{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Matikan setting error TS1295 */
    "verbatimModuleSyntax": false,
    "isolatedModules": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],

  /* KONFIGURASI TAMBAHAN PENTING UNTUK TS-NODE */
  "ts-node": {
    "transpileOnly": true,
    "files": true
  }
}
